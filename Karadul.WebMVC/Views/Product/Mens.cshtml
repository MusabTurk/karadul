@model List<ProductDto>
@{
    Layout = "_Layout";
}


<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Product/index"><i class="fa fa-home"></i> Ana Sayfa</a>
                    <span>Erkek Ürünleri</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            @foreach (var product in Model.Skip(4))
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="product__item">
                        <div class="product__item__pic">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.ProductPicture)" alt="">

                            <ul class="product__hover">
                                <li><a href="data:image/jpeg;base64,@Convert.ToBase64String(product.ProductPicture)" class="image-popup"><span class="arrow_expand"></span></a></li>
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@product.Name</a></h6>
                            <div class="product__price">@product.Price ₺</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


